{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*"
, "scripts/test-mongo-connection.js", "scripts/azure-test.js", "scripts/mongo.js", "scripts/test-openai-connection.ts"    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}