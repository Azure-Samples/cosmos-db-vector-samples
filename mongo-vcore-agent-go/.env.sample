# Enable debug logging
DEBUG=true

# Model Deployments
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small
AZURE_OPENAI_EMBEDDING_API_VERSION=2024-08-01-preview

AZURE_OPENAI_PLANNER_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_PLANNER_API_VERSION=2024-08-01-preview

AZURE_OPENAI_SYNTH_DEPLOYMENT=gpt-4o
AZURE_OPENAI_SYNTH_API_VERSION=2024-08-01-preview

# Authentication Method (set to false to use connection string authentication)
USE_PASSWORDLESS=true

# Azure OpenAI Configuration
# AZURE_OPENAI_API_KEY=    # Omit for passwordless
AZURE_OPENAI_API_INSTANCE_NAME=your-openai-api-instance

# Azure DocumentDB for MongoDB vCore
# AZURE_DOCUMENTDB_CONNECTION_STRING=    # Omit for passwordless
MONGO_CLUSTER_NAME=your-mongo-cluster
MONGO_DB_NAME=Hotels
MONGO_DB_COLLECTION=hotel_data
MONGO_DB_INDEX_NAME=vectorIndex

# Application Settings
DATA_FILE_WITHOUT_VECTORS=data/HotelsData_toCosmosDB.JSON
QUERY=quintessential lodging near running trails, eateries, retail
NEAREST_NEIGHBORS=5

# Vector Index Configuration (optional)
VECTOR_INDEX_ALGORITHM=vector-ivf
VECTOR_SIMILARITY=COS
EMBEDDING_DIMENSIONS=1536
IVF_NUM_LISTS=10
HNSW_M=16
HNSW_EF_CONSTRUCTION=64

